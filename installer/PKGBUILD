# Maintainer: LycanDarko lycandarko (at) proton.me
pkgname="rabbithole"
pkgver=1
pkgrel=1
epoch=
pkgdesc="Rabbithole Meta-Window Manager. A extra-dimensional lightning-fast UI made for enhancing productivity, a second brain interface. Built from the awesome window manager framework."
arch=(x86_64)
url="https://github.com/SaintRyoh/rabbithole"
license=('GPL')
groups=()
depends=(awesome rofi autorandr picom ttf-ubuntu-font-family lxqt-policykit lxqt-powermanagement tmux volumeicon network-manager-applet blueman flameshot rofi-themes-collection-git beautyline linux-wifi-hotspot)
makedepends=(git)
checkdepends=()
optdepends=()
conflicts=(awesome-git)
install=rabbithole.install
changelog="docs/CHANGELOG.md"
source=("rabbithole::git://github.com/SaintRyoh/rabbithole.git")
md5sums=('SKIP')
validpgpkeys=()

prepare() {
	cd "$pkgname-$pkgver"ya
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

check() {
	cd "$pkgname-$pkgver"
	make -k check
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
license